---
  - name: Upgrade and install epel release, nano and net-tools
    hosts: all
    become: yes
    tasks:
      - name: update os 
        yum:
          name: "*"
          state: latest

      - name: install epel-release
        yum:
          name: epel-release
          state: latest

      - name: install remi-release
        yum:
          name: http://rpms.remirepo.net/enterprise/remi-release-7.rpm

      - name: install nano
        yum:
          name: nano
          state: latest  

      - name: net-tools
        yum:
          name: net-tools
          state: latest