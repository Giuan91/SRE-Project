---
  - name: Upgrade and install epel release, nano and net-tools
    hosts: all
    become: yes
    tasks:
      - name: update os 
        yum:
          name: "*"
          state: latest

      - name: install epel-release and remi-release
        yum:
          name: 
            - epel-release
            - remi-release
          state: latest

      - name: install nano
        yum:
          name: nano
          state: latest  

      - name: net-tools
        yum:
          name: net-tools
          state: latest